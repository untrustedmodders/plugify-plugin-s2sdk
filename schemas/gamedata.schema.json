{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "GameData contains information that allows you to target client/server memory directly. This can be useful for exposing functionality",
  "title": "GameConfig",
  "type": "object",
  "$defs": {
    "addressObject": {
      "description": "A address steps",
      "type": "object",
      "properties": {
        "offset": {
          "description": "A offset number in bytes",
          "type": "number"
        },
        "index": {
          "description": "A index number to read a cell from",
          "type": "number"
        },
        "read": {
          "description": "A offset number to read a cell from",
          "type": "number"
        },
        "read_offs32": {
          "description": "A offset number to 32-bit relative cell to read",
          "type": "number"
        }
      }
    }
  },
  "patternProperties": {
    "^(?:(?!\\$).*)$": {
      "description": "Game folder name",
      "type": "object",
      "properties": {
        "Addresses": {
          "description": "Addresses section",
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "description": "A address name",
              "type": "object",
              "address": {
                "description": "An address name from Addresses sections",
                "type": "string"
              },
              "signature": {
                "description": "An address name from Signatures sections",
                "type": "string"
              },
              "vtable": {
                "description": "An address name from VTables sections",
                "type": "string"
              },
              "win64": {
                "description": "Address actions on Windows side",
                "type": "array",
                "items": {
                  "$ref": "#/$defs/addressObject"
                }
              },
              "linuxsteamrt64": {
                "description": "Address actions on Linux side",
                "type": "array",
                "items": {
                  "$ref": "#/$defs/addressObject"
                }
              },
              "osx64": {
                "description": "Address actions on macOS side",
                "type": "array",
                "items": {
                  "$ref": "#/$defs/addressObject"
                }
              },
              "oneOf": [
                {"required": ["address"]},
                {"required": ["signature"]},
                {"required": ["vtable"]}
              ],
              "anyOf": [
                {"required": ["win64"]},
                {"required": ["linuxsteamrt64"]},
                {"required": ["osx64"]}
              ],
              "additionalProperties": false
            }
          }
        },
        "Offsets": {
          "description": "Offsets section",
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "description": "A offset name",
              "type": "object",
              "properties": {
                "win64": {
                  "description": "A offset number on Windows side",
                  "type": "number"
                },
                "linuxsteamrt64": {
                  "description": "A offset number on Linux side",
                  "type": "number"
                },
                "osx64": {
                  "description": "A offset number on macOS side",
                  "type": "number"
                }
              },
              "anyOf": [
                {"required": ["win64"]},
                {"required": ["linuxsteamrt64"]},
                {"required": ["osx64"]}
              ],
              "additionalProperties": false
            }
          }
        },
        "Signatures": {
          "description": "Signatures section",
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "description": "A signature name",
              "type": "object",
              "properties": {
                "library": {
                  "description": "The shared library name",
                  "type": "string"
                },
                "win64": {
                  "description": "A signature bytes string on Windows side. Passes ? to skip a byte",
                  "type": "string"
                },
                "linuxsteamrt64": {
                  "description": "A signature bytes string on Linux side. Passes ? to skip a byte",
                  "type": "string"
                },
                "osx64": {
                  "description": "A signature bytes string on macOS side. Passes ? to skip a byte",
                  "type": "string"
                }
              },
              "required": [
                "library"
              ],
              "anyOf": [
                {"required": ["win64"]},
                {"required": ["linuxsteamrt64"]},
                {"required": ["osx64"]}
              ],
              "additionalProperties": false
            }
          }
        },
        "Patches": {
          "description": "Patches section",
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "description": "A patch name",
              "type": "object",
              "properties": {
                "address": {
                  "description": "An address name from Addresses sections",
                  "type": "string"
                },
                "signature": {
                  "description": "An address name from Signatures sections",
                  "type": "string"
                },
                "vtable": {
                  "description": "An address name from VTables sections",
                  "type": "string"
                },
                "win64": {
                  "description": "A patch bytes string on Windows side. Passes ? to skip a byte",
                  "type": "string"
                },
                "linuxsteamrt64": {
                  "description": "A patch bytes string on Linux side. Passes ? to skip a byte",
                  "type": "string"
                },
                "osx64": {
                  "description": "A patch bytes string on macOS side. Passes ? to skip a byte",
                  "type": "string"
                }
              },
              "oneOf": [
                {"required": ["address"]},
                {"required": ["signature"]},
                {"required": ["vtable"]}
              ],
              "anyOf": [
                {"required": ["win64"]},
                {"required": ["linuxsteamrt64"]},
                {"required": ["osx64"]}
              ],
              "additionalProperties": false
            }
          }
        },
        "VTables": {
          "description": "Virtual tables section",
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "description": "A virtual table key",
              "type": "object",
              "properties": {
                "library": {
                  "description": "The shared library name",
                  "type": "string"
                },
                "table": {
                  "description": "A virtual table name",
                  "type": "string"
                }
              },
              "required": [
                "library",
                "table"
              ],
              "additionalProperties": false
            }
          }
        }
      }
    }
  }
}